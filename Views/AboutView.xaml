                       FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>

            <TextBlock Margin="0,0,0,10">
                <Run Text="Email: "/>
                <Hyperlink NavigateUri="mailto:sabina.urse@student.unitbv.ro" RequestNavigate="Hyperlink_RequestNavigate">
